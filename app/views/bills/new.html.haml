%div.calendar-form-container
  %div.calendar-form
    %div
      %h3.calendar-form-title  Create new bill
      = form_for(@bill, method: "post", url: {action: "create"}, html: {class: "form form-horizontal"}) do |f|
        .form-group
          = f.label :amount, "Amount", class: "col-sm-2 control-label"
          .col-sm-8
            .input-group
              %span.input-group-addon $
              = f.text_field :amount, class: "form-control"
        .form-group
          = f.label :category, "Category", class: "col-sm-2 control-label"
          .col-sm-8
            = f.select :category, %w(Eat Wear Live Travel Other), {include_blank: 'Select Category'}, class: "form-control"
        .form-group
          = f.label :date, "Date", class: "col-sm-2 control-label"
          .col-sm-8
            .input-group.bill_timepicker
              = f.text_field :date, class: "form-control"
              %span.input-group-addon
                %i.glyphicon.glyphicon-calendar
        .form-group
          = f.label :is_expense, "+/-", class: "col-sm-2 control-label"
          .col-sm-8
            .radio-inline
              %label.control-label
              = f.radio_button :is_expense, true, checked: true
              Expense
            .radio-inline
              %label.control-label
              = f.radio_button :is_expense, false
              Earn
        .form-group
          = f.label :note, "Note", class: "col-sm-2 control-label"
          .col-sm-8
            = f.text_field :note, class: "form-control"
        .form-group
          .col-sm-8.col-sm-offset-2
            = f.submit "Submit", class: "btn btn-primary"
            %a.btn.btn-primary{href: bills_path()} Cancel